<idea-plugin>
    <id>com.josesamuel.logviewer</id>
    <name>Log Viewer</name>
    <version>1.0</version>
    <vendor url="https://josesamuel.com/logviewer/">LogViewer</vendor>

    <description><![CDATA[
      Android Studio Plugin to view logcat logs with easy filtering.
    ]]></description>

    <change-notes><![CDATA[
      1.0 : Initial version release.
    ]]>
    </change-notes>

    <idea-version since-build="145.0"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.android</depends>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Log Viewer"
                    anchor="bottom"
                    icon="LogviewerPluginIcons.TOOL_ICON"
                    factoryClass="com.josesamuel.logviewer.LogviewFactory"/>
    </extensions>


</idea-plugin>